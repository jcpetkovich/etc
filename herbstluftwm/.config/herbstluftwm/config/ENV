export BAT_70_PERCENT_GLYPH="<span font=\"Icons\"></span>"
export BAT_30_PERCENT_GLYPH="<span font=\"Icons\"></span>"
export BAT_EMPTY_GLYPH="<span font=\"Icons\"></span>"
