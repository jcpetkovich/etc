#!/bin/bash

# Select background
nitrogen --restore

# set pointer theme
xsetroot -cursor_name left_ptr

# setup keyboard
xset r rate 250 &
colemak3

# setup keychain
source /etc/X11/xinit/xinitrc.d/80-dbus
export `gnome-keyring-daemon -s`

# share x11 info
export_x_info

# Start statusbar
dwmstatus &

# start dwm
exec ck-launch-session dwm
