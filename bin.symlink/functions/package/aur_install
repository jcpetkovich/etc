#!/usr/bin/env dash
# sdothum - 2016 (c) wtfpl

# Package
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# .................................................................. AUR install
 
package="$@" 

cd /tmp
sudo rm -r $package*
curl -L -O https://aur.archlinux.org/cgit/aur.git/snapshot/$package.tar.gz
tar xzf $package.tar.gz
cd $package
makepkg -s
sudo pacman -U --noconfirm $package*tar.xz

# vim: set ft=sh: #
