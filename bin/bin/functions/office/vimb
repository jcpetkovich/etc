nvidia && fn='monospace bold 8' || fn='monospace bold 10'
if nvidia ;then
  fn='monospace bold 8'
else
  fn='monospace bold 10'
fi

# standalone vimb instance
/usr/bin/vimb --cmd="set status-font=$fn" "$@" 2>>/tmp/vimb.log

