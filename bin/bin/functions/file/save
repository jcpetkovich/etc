#!/usr/bin/env dash
# sdothum - 2016 (c) wtfpl

# File
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ......................................................................... Copy

# replace previously saved?
file=$1

if [ -e "$file.save" ] || [ -d "$file.save" ] ;then
  if-yes "overwrite \"$file.save\"" || exit 1
fi

# save distribution copy
if [ -e "$file" ] || [ -d "$file" ] ;then
  echo '.. copying '$(sudo cp -Rv "$file" "$file.save")
  exit 0
fi
exit 1

# vim: set ft=sh: #
